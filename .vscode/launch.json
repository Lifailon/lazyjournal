{
  "configurations": [
    {
      "name": "Local debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": []
    },
    {
      "name": "Remote debug",
      "preLaunchTask": "Run remote debug",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "host": "192.168.3.101",
      "port": 12345
    },
    {
      "name": "SSH mode",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-s", "lifailon@192.168.3.101 -p 2121"]
    },
    {
      "name": "sudo SSH mode",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-s", "lifailon@192.168.3.101 -p 2121 sudo"]
    },
    {
      "name": "Docker remote context",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-C", "hv-us-101"]
    },
    {
      "name": "Kubernetes [default/default]",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-k", "default", "-n", "default"]
    },
    {
      "name": "Custom path [/var/lib]",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-p", "/var/lib"]
    },
    {
      "name": "Fast [5K/2s]",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-t", "5000", "-u", "2"]
    },
    {
      "name": "Max [200K/10s]",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-t", "200000", "-u", "10"]
    },
    {
      "name": "Disable autoupdate",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-e"]
    },
    {
      "name": "Disable color",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-d"]
    },
    {
      "name": "Disable mouse control",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-m"]
    },
    {
      "name": "Docker disable timestamp and only stream",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-i", "-o"]
    },
    {
      "name": "Audit",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-a"]
    },
  ]
}
