{
  "configurations": [
    {
      "name": "Default [10K/5s]",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": []
    },
    {
      "name": "Fast mode [1K/2s]",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-t", "1000", "-u", "2"]
    },
    {
      "name": "Max lines [200K/10s]",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-t", "200000", "-u", "10"]
    },
    {
      "name": "Show audit",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-a"]
    },
    {
      "name": "Show config",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-g"]
    },
    {
      "name": "Remote debug",
      "preLaunchTask": "Run remote debug",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "host": "192.168.3.101",
      "port": 12345
    },
    {
      "name": "SSH mode",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-s", "lifailon@192.168.3.101 -p 2121"]
    },
    {
      "name": "SSH sudo mode",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-s", "lifailon@192.168.3.101 -p 2121 sudo"]
    },
    {
      "name": "Docker remote context",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-C", "hv-us-101"]
    },
    {
      "name": "Kubernetes [default/kube-system]",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-K", "default", "-n", "kube-system"]
    },
    {
      "name": "Custom path [pwd]",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-p", "${pwd}"]
    },
    {
      "name": "Disable tail mode",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-d"]
    },
    {
      "name": "Disable color (highlighting)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-C", "disable"]
    },
    {
      "name": "Only stream mode for Docker logs",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-o"]
    },
    {
      "name": "Disable mouse control",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-m"]
    },
    {
      "name": "Disable wrap mode",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "console": "integratedTerminal",
      "args": ["-w"]
    }
  ]
}
